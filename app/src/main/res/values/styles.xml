<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/purple_dark</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="minWidth">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ContainedButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="backgroundTint">@color/purple_dark</item>
        <item name="cornerRadius">20dp</item>
        <item name="minWidth">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:padding">8dp</item>
        <item name="android:maxLength">100</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="MaterialCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginStart">19dp</item>
        <item name="android:layout_marginEnd">19dp</item>
        <item name="background">@color/white</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
    </style>
</resources>